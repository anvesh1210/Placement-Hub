<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:oracle:thin:@localhost:1522:XE</param-value>
    </context-param>
    <context-param>
        <param-name>username</param-name>
        <param-value>TNPApp</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>TNP123</param-value>
    </context-param>
    <listener>
        <listener-class>
            in.tnpManagement.listener.DBConnectionListener
        </listener-class>
    </listener>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>in.tnpManagement.servlets.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LandingServlet</servlet-name>
        <servlet-class>in.tnpManagement.servlets.LandingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>in.tnpManagement.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>in.tnpManagement.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentHomeServlet</servlet-name>
        <servlet-class>in.tnpManagement.servlets.StudentHomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FacultyHomeServlet</servlet-name>
        <servlet-class>in.tnpManagement.servlets.FacultyHomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>in.tnpManagement.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentProfileServlet</servlet-name>
        <servlet-class>in.tnpManagement.servlets.StudentProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DBTestServlet</servlet-name>
        <servlet-class>in.tnpManagement.servlets.DBTestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LandingServlet</servlet-name>
        <url-pattern>/LandingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/RegistrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentHomeServlet</servlet-name>
        <url-pattern>/StudentHomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FacultyHomeServlet</servlet-name>
        <url-pattern>/FacultyHomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentProfileServlet</servlet-name>
        <url-pattern>/StudentProfileServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DBTestServlet</servlet-name>
        <url-pattern>/DBTestServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <resource-ref>
        <description>Oracle Connection Pool</description>
        <res-ref-name>jdbc/TNPDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
